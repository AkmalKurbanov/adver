extends layout/main/main
block title
  | dislocation
block main
  .wrapper
    .content
      - var headerFlush = false
        include includes/header/header
        .about.layout
          .container
            include includes/breadcrumbs/breadcrumbs
            +breadcrumbs(['главная','Услуги','Наружная реклама'], 'Дислокация')
            .title-wrap
              .title Дислокация

            .cols-wrap
              .secondary-col
                mixin list(data)
                  ul
                    each item, index in  data.items
                      if index == 0
                        li.sidebar__item.sidebar__item_active
                          a(href="#")=item.title
                          if item.sublevel 
                            .trigger-sub-menu
                              i.icon-arrow3
                            +list(item)
                      else
                        li.sidebar__item
                          a(href="#")=item.title
                          if item.sublevel 
                            +list(item)

                aside.sidebar
                .sidebar__list
                  - var data = { "items": [{"title": "Биллборды"}, {"title": "Мегаборды", "sublevel": false, "items":[{"title": "Второй уровень"}]}, {"title": "Реклама на транспорте"},{"title": "Реклама на остановках"},{"title": "Обьемные буквы"},{"title": "Наружная реклама"},{"title": "Дислокация"}]}
                  +list(data)

                .sidebar__list
                  ul
                    
                    li.sidebar__item
                      a(href="#" class="callback-js")
                        i.icon-phone
                        | Заказать звонок

                    li.sidebar__item
                      a(href="#" class="ask-js")
                        i.icon-envelope
                        | Написать сообщение

                    li.sidebar__item
                      a(href="#" class="location-js")
                        i.icon-mark
                        | Ближайший офис 
                
              .main-col
                .flabMapWrap
                  #googlemap
          


     

    include includes/footer/footer

  include includes/callback/callback
  include includes/question/question
  include includes/map/map

  include includes/scripts 
  script(src='https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js')
  script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyACKXohuKJ68EsG2f5I2u1rlpobUCckZaM&callback=initMap')
                                                                              
